
@using DTH_Coffee.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DTH_Coffee.Models.LOAICAFE>

@{
    ViewBag.Title = "LoaiCafe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><h2>QUẢN LÝ THÔNG TIN LOẠI CÀ PHÊ</h2>

<p>
    @Html.ActionLink("Create New", "ThemLoaiCaphe")
</p>
<table class="table", border="1">
    <tr>
        <th style="width:150px">Mã Loại Cà Phê</th>
        <th style="width:150px">Tên Loại Cà Phê</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiCafe)
            </td>
            <td>
                @Html.ActionLink("Delete", "XoaLoai", new { id = item.MaLoai })
            </td>
        </tr>
    }

</table>
    Trang@(Model.PageCount<Model.PageNumber ? 0: Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("LoaiCafe", new { page = page}))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
